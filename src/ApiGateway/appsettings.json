{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Key": "fallback-key-for-development-only",
    "Issuer": "ApiGateway",
    "Audience": "ApiGateway"
  },
  "ReverseProxy": {
    "Routes": {
      "estoque-route": {
        "ClusterId": "estoque-cluster",
        "Match": {
          "Path": "/api/produtos/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/produtos/{**catch-all}"
          }
        ]
      },
      "vendas-route": {
        "ClusterId": "vendas-cluster",
        "Match": {
          "Path": "/api/pedidos/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/pedidos/{**catch-all}"
          }
        ]
      }
    },
    "Clusters": {
      "estoque-cluster": {
        "Destinations": {
          "estoque/destination1": {
            "Address": "https://localhost:7001/"
          }
        }
      },
      "vendas-cluster": {
        "Destinations": {
          "vendas/destination1": {
            "Address": "https://localhost:7002/"
          }
        }
      }
    }
  }
}
